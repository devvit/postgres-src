#!/usr/bin/env bash

install() {
  version=$2
  install_dir=$3

  build_dir=$(mktemp -d)
  cd $build_dir

  curl -fSL -JO https://ftp.postgresql.org/pub/source/v$version/postgresql-$version.tar.gz
  tar -xzf postgres*.gz
  rm -rf postgres*.gz
  cd postgres*
  
  platform=$(uname)
  if [ "$platform" == 'FreeBSD' ]; then
    # CFLAGS="-I/usr/local/include" LDFLAGS="-L/usr/local/lib" ./configure --with-uuid=bsd --prefix=$install_dir
    CFLAGS="-I/usr/local/include" LDFLAGS="-L/usr/local/lib" ./configure --prefix=$install_dir --without-readline --without-zlib
    gmake -s install-world || exit 1
  else
    # ./configure --with-uuid=e2fs --prefix=$install_dir
    ./configure --prefix=$install_dir --without-readline --without-zlib
    make -s install-world || exit 1
  fi

  # export PATH=$PATH:$install_dir/bin

  # git clone https://github.com/markokr/pghashlib
  # cd pghashlib
  # make install || exit 1
}

install $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
